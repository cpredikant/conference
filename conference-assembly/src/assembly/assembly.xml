<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	
	<id>bin</id>
	
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<fileSets>
		<fileSet>
			<directory>../conference-documentation</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.docx</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../conference-service-impl/src/sql</directory>
			<outputDirectory>/sql</outputDirectory>
			<includes>
				<include>*.sql</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<moduleSets>
	
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>com.prodyna.pac:conference-ear</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac:conference-*-impl</include>
				<include>com.prodyna.pac:conference-rest-web</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>test-sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac:conference-ear:ear</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>com.prodyna.pac:conference-ear</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<outputDirectory>/doc</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			
			<excludes>
				<exclude>com.prodyna.pac:conference-assembly</exclude>
			</excludes>
			
			<includes>
				<include>com.prodyna.pac:*</include>
			</includes>

			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>surefire-reports/${module.artifactId}</outputDirectory>
						<directory>target/surefire-reports</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>

